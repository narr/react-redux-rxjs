{
  "name": "react-redux-rxjs",
  "version": "0.1.0",
  "description": "My boilerplate code for React + Redux + RxJs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/narr/react-redux-rxjs.git"
  },
  "author": "https://github.com/narr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/narr/react-redux-rxjs/issues"
  },
  "homepage": "https://github.com/narr/react-redux-rxjs/blob/master/README.md",
  "engines": {
    "node": ">=8.11.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@material-ui/core": "^3.9.0",
    "@storybook/addon-options": "^4.1.7",
    "@storybook/react": "^4.1.7",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.13",
    "@types/storybook__react": "^4.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "commitizen": "^3.0.5",
    "compression": "^1.7.3",
    "cpy-cli": "^2.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-prettier": "^3.0.1",
    "event-source-polyfill": "^1.0.5",
    "express": "^4.16.4",
    "http-proxy-middleware": "^0.19.1",
    "husky": "^1.3.1",
    "jest": "^22.4.4",
    "jest-environment-enzyme": "^7.0.1",
    "jest-enzyme": "^7.0.1",
    "jest-html-reporter": "^2.4.3",
    "lerna": "^3.10.6",
    "lint-staged": "^8.1.0",
    "lodash-es": "^4.17.11",
    "morgan": "^1.9.1",
    "prettier": "^1.16.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-live": "^1.12.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-observable": "^1.0.0",
    "reselect": "^4.0.0",
    "rimraf": "^2.6.3",
    "rxjs": "^6.3.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-dev-middleware": "^3.5.1",
    "webpack-hot-middleware": "^2.24.3"
  },
  "scripts": {
    "doc": "start-storybook -p 9001 -c ./config/.storybook",
    "doc:build": "rimraf ./static/storybook && build-storybook -c ./config/.storybook -o ./static/storybook",
    "test": "jest --config=./config/jest/jest.config.js --watch",
    "test:ci": "jest --config=./config/jest/jest.config.ci.js --coverage",
    "typecheck": "tsc --noEmit",
    "tslint": "tslint -c ./tslint.json -p ./",
    "eslint": "eslint \"**/*.js\"",
    "lint": "npm run typecheck && npm run tslint && npm run eslint",
    "cm": "git-cz",
    "ci:cmlint": "commitlint -f=origin/develop -t=develop",
    "ci": "npm run lint && npm run test:ci",
    "build:comp": "rimraf ./packages/components/dist && tsc -p ./config/typescript/tsconfig.prod.json",
    "pub": "npm run build:comp && lerna publish --conventional-commits",
    "pub:test": "npm run pub -- --skip-git --skip-npm",
    "pub:ci": "npm run pub -- --yes",
    "start": "node ./server",
    "prebuild": "rimraf ./packages/narr-material-ui-core/dist",
    "build": "rimraf ./static && webpack --config ./config/webpack/webpack.config.prod.js",
    "build:all": "rimraf ./static && npm run doc:build && npm run test:ci && cpy ./index.html ./static"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  }
}
