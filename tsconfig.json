{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "scripthost", "es6", "dom.iterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "proj-root/*": ["./*"],
      "pkg-components/*": ["./packages/components/src/*"],
      "shared-root/*": ["./src/app/shared/*"]
    }
  },
  "exclude": ["**/dist"]
}
